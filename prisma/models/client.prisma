model Client {
  id          String  @id @default(uuid())
  email       String
  name        String
  phoneNumber String?
  bills       Bill[]
  userId      String  @map("user_id")

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@unique([email, userId])
  @@unique([phoneNumber, userId])
  @@map("clients")
}
