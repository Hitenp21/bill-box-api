model Product {
  id          String  @id @default(uuid())
  name        String
  rate        Float
  description String?
  userId      String  @map("user_id")

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("products")
}
